/* //
//
// Common Styles ------------------------------------------------------------- */
html {
    padding-bottom: 0 !important;
    scroll-behavior: smooth;
}

#preview-bar-iframe.hide {
    display: none !important;
}

body {
    background-color: var(--color-body-background);
    color: var(--color-body-text);
    font-family: var(--font-body-family);
    font-weight: 500;
    line-height: calc(var(--body-line-height) * 1.5em);
    margin: 0;
    padding: 0;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: bold;
    line-height: calc(var(--headings-line-height) * 1.2em);
    margin: 0;
}

p {
    margin: 0;
}

a {
    text-decoration: none;
}

form {
    margin-bottom: 0;
}

input {
    border: none;
    font-family: var(--font-body-family);
    font-size: 1.4rem;
    font-weight: bold;
}

select {
    border: 1px solid var(--color-body-border);
    border-radius: 5px;
    color: var(--color-body-text);
    font-family: var(--font-body-family);
    font-weight: bold;
}

fieldset {
    border: none;
    margin: 0;
    padding: 0;
}

legend {
    font-weight: 600;
    margin-bottom: var(--base-padding);
    text-transform: uppercase;
}

.container {
    margin: 0 auto;
    width: 100%;
}

.visually-hidden {
    display: none;
}

.store--loading-wrapper {
    align-items: center;
    background-color: black;
    bottom: 0;
    display: flex;
    justify-content: center;
    left: 0;
    opacity: 0;
    position: fixed;
    right: 0;
    top: 0;
    transition: .2s;
    visibility: hidden;
    z-index: 40;
}

.store--loading-wrapper.loading-screen-open {
    opacity: .6;
    visibility: visible;
}

/* Button styling */
.button {
    box-shadow: none;
    border: none;
    border-radius: 5px;
    display: inline-block;
}

.action {
    font-weight: bold;
    text-transform: uppercase;
}

.badge {
    align-items: center;
    border-radius: 100px;
    display: flex;
    font-weight: bold;
    justify-content: center;
    position: relative;
    text-transform: uppercase;
}

.primary {
    background-color: var(--primary-btn-background-color);
    color: var(--primary-btn-text-color);
}

.primary svg path {
    fill: var(--primary-btn-text-color);
}

.secondary {
    background-color: var(--secondary-btn-background-color);
    color: var(--secondary-btn-text-color);
}

.secondary svg path {
    fill: var(--primary-btn-text-color);
}

.tertiary {
    background-color: var(--tertiary-btn-background-color);
    color: var(--tertiary-btn-text-color);
}

.tertiary svg path {
    fill: var(--tertiary-btn-text-color);
}

.fourth {
    background-color: var(--color-body-background);
    color: var(--color-body-text);
}

.badge span {
    display: inline-block;
    margin-left: calc(var(--base-padding) / 2);
}

.badge svg {
    height: auto;
    width: 12px;
}

/* Flyout Container */
.flyout--wrapper {
    background-color: black;
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    opacity: 0;
    transition: .2s;
    transition-delay: .2s;
    top: 0;
    visibility: hidden;
    z-index: 30;
}

.flyout--wrapper.flyout-is-open {
    background-color: rgba(0, 0, 0, .6);
    display: block;
    max-height: 100vh;
    opacity: 1;
    visibility: visible;
}

.flyout--inner-wrapper {
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    transition: .5s ease-in-out;
}

.flyout--title-wrapper {
    align-items: flex-start;
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.flyout--title {
    flex-grow: 1;
    text-transform: uppercase;
}

/* Product input quantity buttons */
.general-product--input-wrapper {
    align-items: center;
    display: flex;
    justify-content: flex-start;
}

.product--quantity-input {
    background-color: var(--color-body-border);
    pointer-events: none;
}

/* //
//
// Mobile Only Styles ------------------------------------------------------------- */
@media (max-width: 540px) {
    html {
        font-size: 14px;
    }

    select {
        font-size: 1rem;
        padding: calc(var(--base-padding) * 1.5) var(--base-padding);
    }

    .hide-on-mobile {
        display: none;
    }

    .hide-on-desktop {
        display: block;
    }

    /* Button styling */
    .button {
        font-size: 1rem;
    }

    .action.primary {
        font-size: 1.2rem;
        padding: calc(var(--base-padding) * 1.5) calc(var(--base-padding) * 3);
    }

    .badge {
        font-size: 0.8rem;
        line-height: 1em;
        padding: calc(var(--base-padding) * 0.6) calc(var(--base-padding) * 1.2);
    }

    /* Flyout Container */
    .flyout--wrapper.flyout-is-open .flyout--inner-wrapper {
        max-height: 100%;
        opacity: 1;
        transform: translateY(0);
    }

    .flyout--inner-wrapper {
        border-radius: 5px;
        bottom: 0;
        height: calc(100vh - (var(--base-padding) * 4));
        left: 0;
        max-height: 0;
        opacity: 0;
        overflow-y: scroll;
        padding: 0 calc(var(--base-padding) * 2);
        position: fixed;
        right: 0;
        transform: translateY(20%);
    }

    .flyout--title-wrapper {
        border-bottom: 1px solid var(--color-body-border);
        margin: calc(var(--base-padding) * 4) 0;
        padding-bottom: calc(var(--base-padding) * 4);
        width: 100%;
    }

    /* Product input quantity buttons */
    .product--input-wrapper {
        margin: calc(var(--base-padding) * 4) 0;
    }

    .product--quantity-input {
        border-radius: 5px;
        height: 60px;
        margin: 0 var(--base-padding);
        text-align: center;
        width: 60px;
    }

    .product--quantity-adjust-btn {
        height: 40px;
        text-align: center;
        width: 40px;
    }
}

/* //
//
// Desktop Only Styles ------------------------------------------------------------- */
@media (min-width: 540px) {
    html {
        font-size: 16px;
    }

    .hide-on-mobile {
        display: block;
    }

    .hide-on-desktop {
        display: none;
    }
}