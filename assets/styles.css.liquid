/* //
//
// Common Styles ------------------------------------------------------------- */
body {
    background-color: var(--color-body-background);
    color: var(--color-body-text);
    font-family: var(--font-body-family);
    margin: 0;
    padding: 0;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: bold;
    margin: 0;
}

.container {
    margin: 0 auto;
    width: 100%;
}

/* //
//
// Mobile Only Styles ------------------------------------------------------------- */
@media (max-width: 768px) {
    .hide-on-mobile {
        display: none;
    }

    .hide-on-desktop {
        display: block;
    }
}

/* //
//
// Desktop Only Styles ------------------------------------------------------------- */
@media (min-width: 768px) {
    .hide-on-mobile {
        display: block;
    }

    .hide-on-desktop {
        display: none;
    }
}