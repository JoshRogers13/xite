{{ 'collection.css' | asset_url | stylesheet_tag }}

<style>

  .store--collection {
    padding: {{ section.settings.product_top_padding }}px 0 {{ section.settings.product_bottom_padding }}px 0;
  }

  .collection--container {
    max-width: {{ section.settings.header_container_width }};
  }

</style>

{% render 'product-list', collection: collection %}

{% schema %}
{
    "name": "Collection Main",
    "settings": [
        {
            "type": "range",
            "id": "collection_top_padding",
            "label": "Collection Top Padding",
            "min": 10,
            "max": 100,
            "step": 10,
            "default": 20,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "collection_bottom_padding",
            "label": "Collection Bottom Padding",
            "min": 10,
            "max": 100,
            "step": 10,
            "default": 20,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "collection_container_width",
            "label": "Collection Container Width",
            "min": 1200,
            "max": 3000,
            "step": 30,
            "default": 1920,
            "unit": "px"
        }
    ]
}
{% endschema %}